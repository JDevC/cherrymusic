{
    "js":
    {
        "parsers": [
        {
            "expression": "$gettext",
            "arguments":
            {
                "text": 0
            }
        },
        {
            "expression": "$ngettext",
            "arguments":
            {
                "text": 0,
                "textPlural": 1
            }
        },
        {
            "expression": "$pgettext",
            "arguments":
            {
                "context": 0,
                "text": 1
            }
        }],
        "glob":
        {
            "pattern": "src/**/*.ts",
            "options":
            {
                "ignore": "src/**/*.spec.ts"
            }
        }
    },
    "html":
    {
        "parsers": [
        {
            "element": "translate",
            "attributes":
            {
                "textPlural": "plural",
                "context": "context"
            }
        },
        {
            "element": "v-translate",
            "attributes":
            {
                "textPlural": "v-translate-plural",
                "context": "v-translate-context"
            }
        }],
        "glob":
        {
            "pattern": "src/**/*.vue"
        }
    },
    "headers":
    {
        "Language": ""
    },
    "output": "translations/template.pot"
}
